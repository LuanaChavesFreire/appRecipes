generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int      @id @default(autoincrement())
  fullname String   @db.VarChar(45)
  email    String   @unique @db.VarChar(45)
  password String   @db.VarChar(10)
  recipe   recipe[]
}

model recipe {
  ingredients String
  preparing   String
  duration    String? @db.VarChar
  id_user     Int?
  tittle      String? @unique @db.VarChar(45)
  id          Int     @id @default(autoincrement())
  users       users?  @relation(fields: [id_user], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
